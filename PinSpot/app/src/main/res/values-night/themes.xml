<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PinSpot" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryDarkColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="textInputStyle">@style/Widget.Material3.TextInputLayout.OutlinedBox</item>
        <!-- For radio buttons -->
        <item name="radioButtonStyle">@style/Widget.Material3.CompoundButton.RadioButton</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>
    </style>
    <style name="TextWiew">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:drawableTint">@color/primaryColor</item>
    </style>
    <style name="CadWiewWhite">
        <item name="android:background">@color/white</item>
    </style>
    <style name="SecondaryBackgroundColor">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
    <style name="Separator">
        <item name="android:background">@color/primaryLightColor</item>
    </style>
    <style name="TextWhite">
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="TextBlack">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="TextColored">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="TextDark">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>
    <style name="Button">
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonDark">
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ButtonLigth">
        <item name="android:backgroundTint">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="PrimaryBackgroundColor">
        <item name="android:background">@color/primaryDarkColor</item>
    </style>
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/primaryLightColor</item>
    </style>
</resources>